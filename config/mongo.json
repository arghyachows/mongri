{
  "development": {
    "uri": "mongodb://localhost:27017/mongri-develop",
    "opts": {
      "poolSize": 20,
      "useNewUrlParser": true
    }
  },
  "docker": {
    "uri": "mongodb://mongo:27017/mongri-develop",
    "opts": {
      "poolSize": 20,
      "useNewUrlParser": true
    }
  },
  "heroku": {
    "opts": {
      "poolSize": 20,
      "useNewUrlParser": true
    }
  },
  "docdb": {
    "uri": "mongodb://{user}:{password}@localhost:27017/{docdb}",
    "opts": {
      "poolSize": 20,
      "useNewUrlParser": true,
      "ssl": true
    }
  },
  "production": {
    "uri": "mongodb://localhost:27017/mongri-production",
    "opts": {
      "poolSize": 20,
      "server": {
        "ssl": true
      },
      "useNewUrlParser": true
    }
  }
}
