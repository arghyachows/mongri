{
  "development": {
    "uri": "mongodb://localhost:27017/mongri-develop",
    "opts": {
      "poolSize": 20,
      "useNewUrlParser": true
    }
  },
  "docker": {
    "uri": "mongodb://172.16.10.50:27017/mongri-develop",
    "opts": {
      "poolSize": 20,
      "useNewUrlParser": true
    }
  },
  "heroku": {
    "opts": {
      "useMongoClient": true,
      "autoIndex": false,
      "reconnectTries": 100,
      "reconnectInterval": 500,
      "poolSize": 10,
      "bufferMaxEntries": 0
    }
  },
  "production": {
    "uri": "mongodb://localhost:27017/mongri-production",
    "opts": {
      "poolSize": 20,
      "server": {
        "ssl": true
      },
      "useNewUrlParser": true
    }
  }
}
